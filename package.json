{
  "name": "ti4-ttpg-ts",
  "version": "1.0.12",
  "description": "Twilight Imperium 4 for Tabletop Playground",
  "main": "build/index.js",
  "license": "Unlicense",
  "private": false,
  "scripts": {
    "setup": "ttpg-scripts setup",
    "dev": "ttpg-scripts dev",
    "clean": "ttpg-scripts clean",
    "reset": "ttpg-scripts reset",
    "build": "ttpg-scripts build",
    "purge": "ttpg-scripts purge",
    "libpack": "ttpg-scripts libpack",
    "watch": "ttpg-scripts watch",
    "index": "yarn cti ./src -e _how-to -e _test -e ref-obj -i '*.test.ts' -i '*.testp.ts' && find . -name 'index.ts.bak' -exec rm {} \\;",
    "prepublishOnly": "yarn index && tsc -p tsconfig.json",
    "check:prettier": "prettier --check src",
    "test": "jest",
    "lint": "ESLINT_USE_FLAT_CONFIG=false eslint --ext .ts --debug src",
    "circular": "npx madge --circular --extensions ts ./src"
  },
  "devDependencies": {
    "@tabletop-playground/api": "0.41.0",
    "@types/fs-extra": "^11.0.4",
    "@types/jest": "^29.5.11",
    "@types/klaw-sync": "^6.0.5",
    "@types/node": "^20.14.2",
    "@typescript-eslint/eslint-plugin": "^7.17.0",
    "@typescript-eslint/parser": "^7.17.0",
    "create-ts-index": "^1.14.0",
    "eslint": "^9.7.0",
    "fs-extra": "^11.2.0",
    "jest": "^29.7.0",
    "klaw-sync": "^6.0.0",
    "prettier": "^3.3.3",
    "sharp": "^0.33.5",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "ttpg-mock": "^1.0.48",
    "ttpg-scripts": "^1.5.0",
    "typescript": "^5.4.5"
  },
  "dependencies": {
    "ttpg-darrell": "^1.1.14",
    "zod": "3.22.4"
  },
  "files": [
    "build/**/*.js",
    "build/**/*.js.map",
    "build/**/*.d.ts",
    "!build/**/*.testp.js",
    "!build/**/*.testp.js.map",
    "!build/**/*.testp.d.ts",
    "!build/_test",
    "!build/_how-to"
  ]
}
