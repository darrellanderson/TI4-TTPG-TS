{
  "compilerOptions": {
    "checkJs": true,
    "lib": ["ES2023", "DOM"],
    "module": "commonjs",
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "useUnknownInCatchVariables": false,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "rootDir": "./src",
    "baseUrl": "./src",
    "moduleResolution": "Node",
    "target": "ES6",
    "declaration": true,
    "emitDeclarationOnly": true,
    "outFile": "types/index.d.ts"
  },
  "include": ["./src/**/*.ts", "./src/**/*.tsx"]
}
