{
  "compilerOptions": {
    "checkJs": true,
    "lib": ["ES2023", "DOM"],
    "module": "commonjs",
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "useUnknownInCatchVariables": false,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "jsx": "react",
    "jsxFactory": "jsxInTTPG",
    "jsxFragmentFactory": "jsxFrag",
    "rootDir": "./src",
    "baseUrl": "./src",
    "outDir": "./types",
    "moduleResolution": "Node",
    "target": "ES6",
    "sourceMap": true,
    "declaration": true,
    "emitDeclarationOnly": true
  },
  "include": ["./src/**/*.ts", "./src/**/*.tsx"],
  "exclude": [
    "./src/**/*.test.ts",
    "./src/**/*.testp.ts",
    "./src/_how-to",
    "./src/_test"
  ]
}
