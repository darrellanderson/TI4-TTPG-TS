{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "Node",
    "lib": ["ES2023", "DOM"],
    "skipLibCheck": true,

    "resolveJsonModule": true,
    "declaration": true,
    "emitDeclarationOnly": true,
    "outDir": "dist",
    "outFile": "types/index.d.ts"
  },
  "include": ["./src/**/*.ts", "./src/**/*.tsx"],
  "exclude": ["./src/**/*.test.ts", "./src/**/*.testp.ts"]
}
