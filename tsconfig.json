{
  "compilerOptions": {
    "checkJs": true,
    "lib": ["ES2023", "DOM"],
    "module": "commonjs",
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "useUnknownInCatchVariables": false,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "jsx": "react",
    "jsxFactory": "jsxInTTPG",
    "jsxFragmentFactory": "jsxFrag",
    "rootDir": "./src",
    "baseUrl": "./src",
    "outDir": "./build",
    "moduleResolution": "Node",
    "target": "ES6"
  },
  "include": [
    "./src/**/*.ts",
    "./src/**/*.tsx",
    "src/lib/system-lib/abstract-system-entity"
  ]
}
